FROM nvidia/cuda:12.1.0-cudnn8-runtime-ubuntu22.04
ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update && apt-get install -y python3 python3-pip git curl && rm -rf /var/lib/apt/lists/*
COPY docker/requirements-gpu.txt /tmp/requirements-gpu.txt
RUN python3 -m pip install --upgrade pip && pip install -r /tmp/requirements-gpu.txt
WORKDIR /app
COPY . /app
CMD ["python3","train_prototype.py"]
